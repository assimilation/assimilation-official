{
    "cypher": "START host=node:Drone('*:*')
               MATCH (switch)-[:nicowner]->(swnic)-[:wiredto]-(hostnic)<-[:nicowner]-(host)
               WHERE host.designation = {host}
               RETURN switch, swnic, hostnic, host",
